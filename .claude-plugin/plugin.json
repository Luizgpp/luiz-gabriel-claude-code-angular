{
  "name": "luiz-gabriel-claude-code-angular",
  "version": "1.0.0",
  "description": "Claude Code plugin with comprehensive Angular support (v12 & v20+), productivity commands, and specialized AI agents for modern web development",
  "author": {
    "name": "Luiz Gabriel",
    "url": "https://github.com/Luizgpp"
  },
  "license": "MIT",
  "commands": "./.claude/commands/",
  "skills": "./.claude/agents/",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Access up-to-date documentation for any library"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "description": "Browser automation and web testing capabilities"
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server-supabase"],
      "description": "Supabase database operations and management"
    }
  },
  "tags": [
    "productivity",
    "nextjs",
    "supabase",
    "typescript",
    "react",
    "angular",
    "angular-12",
    "angular-20",
    "rxjs",
    "signals",
    "api",
    "development",
    "mcp"
  ]
}
